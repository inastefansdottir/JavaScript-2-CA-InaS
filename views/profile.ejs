<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("components/head", ({ title: title, description: description,
    stylesheets: ['/css/profile.css', '/css/desktop-navbar.css',
    '/css/mobile-header.css', '/css/mobile-navbar.css'] })) %>
    <script type="module" src="/js/search.js"></script>
    <script type="module" src="/js/personal-profile.js"></script>
  </head>
  <body>
    <header>
      <%- include("components/desktop-side-panel") %><%-
      include("components/mobile-header") %>
    </header>

    <main>
      <div class="profile-info-wrapper">
        <img
          src=""
          alt="Profile picture"
          class="profile-picture"
          id="profilePicture"
        />
        <div class="profile-info">
          <h1 class="username" id="username"></h1>
          <a href="/profile/edit" class="button edit-profile-button"
            >Edit profile</a
          >

          <div class="info-section">
            <div class="align-center">
              <span class="numbers-styling" id="followingCount"></span>
              <span class="text-styling">Following</span>
            </div>
            <div class="vertical-line"></div>
            <div class="align-center">
              <span class="numbers-styling" id="followersCount"></span>
              <span class="text-styling">Followers</span>
            </div>
            <div class="vertical-line"></div>
            <div class="align-center padding-right">
              <span class="numbers-styling" id="postsCount"></span>
              <span class="text-styling">Posts</span>
            </div>
          </div>
        </div>
      </div>

      <div class="posts-container" id="postsContainer"></div>

      <div class="no-posts-message" id="noPostsMessage"></div>

      <div class="bottom-spacing"></div>
    </main>

    <%- include("components/mobile-navbar") %>
  </body>
</html>
